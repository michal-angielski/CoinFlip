<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="400.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
   <bottom>
      <HBox BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </BorderPane.margin>
         <children>
            <Region HBox.hgrow="ALWAYS" />
            <VBox>
               <children>
                  <Button mnemonicParsing="false" onAction="#coinFlip" prefHeight="50.0" prefWidth="100.0" text="Flip" />
               </children>
            </VBox>
            <Region HBox.hgrow="ALWAYS" />
            <Label fx:id="headToTail" HBox.hgrow="ALWAYS">
               <font>
                  <Font size="10.0" />
               </font>
            </Label>
         </children>
      </HBox>
   </bottom>
   <top>
      <VBox BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets top="20.0" />
         </BorderPane.margin>
         <children>
            <Label alignment="CENTER" prefHeight="58.0" prefWidth="493.0" text="Flip a coin" textAlignment="CENTER" VBox.vgrow="ALWAYS">
               <font>
                  <Font size="40.0" />
               </font>
            </Label>
            <HBox VBox.vgrow="ALWAYS">
               <children>
                  <Region HBox.hgrow="ALWAYS" />
                  <Label fx:id="headsLabel" prefHeight="17.0" prefWidth="77.0" text="Heads: 0">
                     <HBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </HBox.margin>
                  </Label>
                  <Region HBox.hgrow="ALWAYS" />
                  <Label fx:id="tailsLabel" text="Tails: 0">
                     <HBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </HBox.margin>
                  </Label>
                  <Region HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
         </children>
      </VBox>
   </top>
   <center>
      <Label fx:id="mainLabel" textAlignment="CENTER" BorderPane.alignment="CENTER">
         <font>
            <Font size="70.0" />
         </font>
      </Label>
   </center>
</BorderPane>
